rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Pet photos - Only authenticated users can upload/read their own pets' photos
    match /pets/{userId}/{filename} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Note photos - Only authenticated users can upload/read their own notes' photos
    match /notes/{userId}/{filename} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile photos - Only authenticated users can upload/read their own profile photos
    match /profiles/{userId}/{filename} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
